@page
@model ChirpSocial.Pages_Posts.EditModel

@{
    ViewData["Title"] = "Edit";
}

<style>
    .btn-primary {
        color: #fff;
        background-color: #c8a4d4;
        border-color: #c8a4d4;
    }
</style>

<div class="mx-auto w-75">
    <h1 class="text-center">Edit Post</h1>
    <hr />
    <div class="d-flex justify-content-center">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Post.PostID"/>
                <div class="form-group d-flex justify-content-center bg-white">
                    <input asp-for="Post.PostContent" class="form-control" />
                    <span asp-validation-for="Post.PostContent" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between mt-3">
                    <div class="form-group d-flex justify-content-start">
                        <input asp-route-profileId="@Model.CurrentUserID" type="submit" value="Save"
                            class="btn btn-primary" />
                    </div>
                    <div class="form-group d-flex justify-content-start">
                        <a asp-page="./Index" asp-route-profileId="@Model.CurrentUserID" class="btn btn-secondary">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
