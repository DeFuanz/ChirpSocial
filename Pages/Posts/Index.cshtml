@page
@model ChirpSocial.Pages_Posts.IndexModel

@{
    ViewData["Title"] = "Index";
}


<div class="">
    <div class="container bg-white border border-white rounded">
        <p class="text-end m-2">
            <a asp-page="Create" class="btn btn-secondary">New Post</a>
        </p>
    </div>

    <dl>
        @foreach (var item in Model.Post)
        {
            <div class="mt-3 mb-3 bg-white container border border-white rounded">
                <div class="">
                    <dt class="text-start">
                        @Html.DisplayFor(modelItem => item.Profile.ProfileUserName)
                    </dt>
                    <dd class="blockquote text-center">
                        @Html.DisplayFor(modelItem => item.PostContent)
                    </dd>
                    <dd class="d-flex justify-content-between">
                        <div>
                            @Html.DisplayFor(modelItem => item.PostDate)
                        </div>
                        <div>
                            <a asp-page="./Edit" asp-route-id="@item.PostID">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.PostID"><img width="25" height="25" src="conversation.png" alt=""></a> |
                            <a asp-page="./Delete" asp-route-id="@item.PostID">Delete</a>
                        </div>
                    </dd>
                </div>
            </div>
        }
    </dl>
</div>