@page
@model ChirpSocial.Pages_Posts.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Post</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Profile)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Profile.ProfileUserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.PostDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.PostDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.PostContent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.PostContent)
        </dd>
    </dl>
    <dl>
        @foreach (var r in Model.Post.Replies) //Error "Object reference not set to an instance of an object"
        {
            <dt class="col-sm-2">
            @Html.DisplayNameFor(model => r.ReplyContent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => r.ReplyContent)
        </dd>
        }
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Post?.PostID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
