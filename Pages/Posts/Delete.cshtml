@page
@model ChirpSocial.Pages_Posts.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container text-center w-75">
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this post?</h3>
    <hr />
    <div class="">
        <dl class="text-center">
            <div class="mt-3 mb-3 bg-white container border border-white rounded">
                <div class="">
                    <dt class="text-start">
                        @Html.DisplayFor(model => model.Post.Profile.ProfileUserName)
                    </dt>
                    <dd class="blockquote text-center">
                        @Html.DisplayFor(model => model.Post.PostContent)
                    </dd>
                    <dd class="d-flex justify-content-between">
                        <div>
                            @Html.DisplayFor(model => model.Post.PostDate)
                        </div>
                    </dd>

                </div>
            </div>
        </dl>

        <form method="post">
            <div class="d-flex justify-content-between">
                <div>
                    <input type="hidden" asp-route-profileId="@Model.CurrentUserId" asp-for="Post.PostID" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
                <div>
                    <a class="btn btn-secondary" asp-page="./Index"
                        asp-route-profileId="@Model.CurrentUserId">Cancel</a>
                </div>
            </div>
        </form>

    </div>
</div>
